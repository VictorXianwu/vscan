<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2b9ddff"
    tools:context="com.victor.vscan.AddActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="微扫"
        android:textSize="25sp" />
   

    <EditText
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:id="@+id/addET"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:textSize="20sp"
        android:layout_below="@+id/textView1"
        android:gravity="top|left"
        android:background="@drawable/shape"
        android:padding="7dp" />
    
    <Button
        android:id="@+id/addBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addET"
        android:layout_marginTop="30dp"
        android:background="@drawable/bt_seleter"
        android:onClick="OnClick_Event"
        android:text=" 确 定 "
        android:textSize="18sp" />

    <Button
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音"
        android:textSize="18sp"
        android:background="@drawable/bt_seleter"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/addBT"
        android:layout_alignBaseline="@+id/addBT"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="30dp" />



</RelativeLayout>
